<h1><%= "使用者列表" %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <td><%= "使用者名稱" %></td>
      <td><%= "電子信箱" %></td>
      <td></td>
    </tr>
  </thead>
  
  <tbody>
    <% @users.each do |user| %>
      <tr>
      <td><%= link_to user.username, edit_user_path(user) %></td>
      <td><%= user.email %></td>
      <td>
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <%= link_to "編輯", edit_user_path(user) , class: 'dropdown-item' %>
          <div class="dropdown-divider"></div>          
          <%= link_to "刪除", user_path(user) , class: 'dropdown-item', method: 'delete', data: { confirm: "確認刪除嗎？"}%>
        </div>
      </td>
    </tr>
    <% end %>

  </tbody>
</table>

<%= button_to "新增", sign_up_path , class:"btn btn-outline-dark", method: "get"%>
