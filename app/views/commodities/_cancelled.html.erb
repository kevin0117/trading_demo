<table class="table table-hover">
  <thead class='thead-dark'>
    <tr>
      <th>ID</th>
      <th>名稱</th>
      <th>價格</th>
      <th>數量</th>
      <th>合計</th>
      <th>委託</th>
      <th></th>
    </tr>
  </thead>
  
  <tbody>
    <% current_user.commodities.only_deleted.each do |commodity| %>
    <tr>
      <td><%= commodity.id %></td>
      <td><%= commodity.title %></td>
      <td><%= commodity.price %></td>
      <td><%= commodity.quantity %></td>
      <td><%= commodity.total_price %></td>
      <td><%= print_action(commodity.action) %></td>
    </tr>    
    <% end %>
  </tbody>
</table>